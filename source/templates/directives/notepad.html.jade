.note-area(ng-show="!editMode")
  ul
    li(ng-repeat="note in notes|orderBy:'id'")
      a(href='' ng-click="openEditor(note.id)") {{note.title}}
#editor.note-area(ng-show="editMode" contenteditable="true" ng-bind="noteText")
span
  a(href='' ng-click="save()", ng-show="editMode") Back
span
  a(href='' ng-click="openEditor()", ng-show="!editMode") Add Note